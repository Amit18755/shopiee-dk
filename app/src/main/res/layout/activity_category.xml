<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".CategoryActivity">


    <!-- First GridView -->
    <GridView
        android:id="@+id/grid_view1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:horizontalSpacing="5dp"
        android:numColumns="2"
        android:verticalSpacing="5dp"
        />

    <!-- TextView for "Air Conditioner" -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid_view1"
        android:layout_alignParentStart="true"
        android:text="Air Conditioners"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:textSize="16sp"
        />

    <!-- Second GridView -->
    <GridView
        android:id="@+id/grid_view2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:horizontalSpacing="5dp"
        android:numColumns="2"
        android:verticalSpacing="5dp"
        />

    <!-- TextView for "Fridge" -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid_view2"
        android:layout_alignParentEnd="true"
        android:paddingLeft="5dp"
        android:text="Refrigerators"
        android:layout_margin="5dp"
        android:textAlignment="gravity"
        android:textSize="16sp" />

    <!-- Third GridView -->
    <GridView
        android:id="@+id/grid_view3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_alignParentStart="true"
        android:horizontalSpacing="5dp"
        android:numColumns="2"
        android:verticalSpacing="5dp" />

    <!-- TextView for "Television" -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid_view3"
        android:layout_alignParentStart="true"
        android:text="Laptops"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:textSize="16sp" />

    <!-- Fourth GridView -->
    <GridView
        android:id="@+id/grid_view4"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_alignParentEnd="true"
        android:horizontalSpacing="5dp"
        android:numColumns="2"
        android:verticalSpacing="5dp" />

    <!-- TextView for "Home Appliances" -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid_view4"
        android:layout_alignParentEnd="true"
        android:paddingStart="5dp"
        android:layout_margin="5dp"
        android:text="Speakers"
        android:textAlignment="gravity"
        android:textSize="16sp" />

</RelativeLayout>